# ==========================================
# LARAVEL CONFIGURATION - PRODUCTION
# ==========================================

# Application
APP_NAME="Immo Guinée"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://votre-domaine.com

# Timezone
APP_TIMEZONE=Africa/Conakry
APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

# ==========================================
# DATABASE - PostgreSQL
# ==========================================
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=immo_guinee_db
DB_USERNAME=immo_user
DB_PASSWORD=CHANGEZ_MOI_PRODUCTION_123!@#

# ==========================================
# CACHE - Redis
# ==========================================
CACHE_DRIVER=redis
CACHE_PREFIX=immo_cache

# ==========================================
# SESSION - Redis
# ==========================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ==========================================
# QUEUE - Redis
# ==========================================
QUEUE_CONNECTION=redis
QUEUE_PREFIX=immo_queue

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=0
REDIS_SESSION_DB=1
REDIS_QUEUE_DB=2

# ==========================================
# MAIL CONFIGURATION
# ==========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=votre-email@gmail.com
MAIL_PASSWORD=votre-mot-de-passe-app
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@votre-domaine.com
MAIL_FROM_NAME="${APP_NAME}"

# ==========================================
# FILESYSTEM - Storage
# ==========================================
FILESYSTEM_DISK=local
# Pour S3/Minio en production :
# FILESYSTEM_DISK=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_URL=
# AWS_ENDPOINT=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ==========================================
# LOGGING
# ==========================================
LOG_CHANNEL=daily
LOG_LEVEL=warning
LOG_DEPRECATIONS_CHANNEL=null
LOG_STACK=single

# ==========================================
# BROADCASTING (si nécessaire)
# ==========================================
BROADCAST_DRIVER=log
# Pour Pusher/Ably :
# BROADCAST_DRIVER=pusher
# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
# PUSHER_APP_CLUSTER=mt1

# ==========================================
# SERVICES TIERS
# ==========================================

# Cloudflare (CDN et Cache)
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=

# Sentry (Monitoring d'erreurs)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Google Analytics
GOOGLE_ANALYTICS_ID=

# reCAPTCHA (protection formulaires)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# ==========================================
# OPTIMISATIONS LARAVEL
# ==========================================

# Route caching
ROUTE_CACHE_ENABLED=true

# Config caching
CONFIG_CACHE_ENABLED=true

# View caching
VIEW_CACHE_ENABLED=true

# Event caching
EVENT_CACHE_ENABLED=true

# ==========================================
# SÉCURITÉ
# ==========================================

# CORS
SANCTUM_STATEFUL_DOMAINS=votre-domaine.com,*.votre-domaine.com

# Trusted Proxies (pour Cloudflare + Nginx)
TRUSTED_PROXIES=*
TRUSTED_HOSTS=votre-domaine.com

# Rate Limiting (requêtes par minute)
RATE_LIMIT_API=60
RATE_LIMIT_WEB=1000

# ==========================================
# TELESCOPE (Debugging - DÉSACTIVER EN PROD)
# ==========================================
TELESCOPE_ENABLED=false

# ==========================================
# SCOUT (Full-text search - Elasticsearch)
# ==========================================
SCOUT_DRIVER=database
# Pour Elasticsearch :
# SCOUT_DRIVER=elasticsearch
# SCOUT_PREFIX=immo_
# SCOUT_QUEUE=true
# ELASTICSEARCH_HOSTS=elasticsearch:9200

# ==========================================
# PERFORMANCE
# ==========================================

# OPcache (déjà configuré dans Dockerfile)
OPCACHE_ENABLE=1
OPCACHE_VALIDATE_TIMESTAMPS=0

# Query caching
DB_QUERY_CACHE_ENABLED=true
DB_QUERY_CACHE_TTL=3600

# Response caching
HTTP_CACHE_ENABLED=true
HTTP_CACHE_TTL=3600

# ==========================================
# BACKUP
# ==========================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=immo-guinee-backups
